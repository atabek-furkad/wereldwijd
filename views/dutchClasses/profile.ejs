<h2>Class Name: <%= dutchClass.name %></h2>
<!-- <h3>Teachers:</h3> -->

<form action="/dutch-classes/<%= dutchClass.id %>?_method=POST" method="POST">
  <div class="table-container">
    <table id="presenceTable">
      <thead>
        <tr>
          <th>Present</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
        <tr>
          <td>
            <input
              type="checkbox"
              name="presentStudent"
              value="<%= student.id %>"
            />
          </td>
          <td><%= student.name %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <button type="submit">Send</button>
</form>
